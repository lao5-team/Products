<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dip" android:background="@color/pure_white" android:paddingRight="15dip">
    <ImageView
            android:layout_width="36dip"
            android:layout_height="36dip"
            android:id="@+id/imageView_avatar" android:layout_margin="10dip" android:layout_centerVertical="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/textView_name"
            android:gravity="center_vertical" android:textSize="15dp" android:textStyle="bold"
            android:layout_toRightOf="@+id/imageView_avatar"
            android:layout_marginLeft="0dip" android:layout_marginTop="20dip" android:layout_marginBottom="20dip"
            android:textColor="#000000"/>
    <CheckedTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关    注" android:layout_alignParentRight="true"
            android:id="@+id/textView_follow"
            android:clickable="true"
            android:gravity="center_vertical" android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:background="@drawable/follow_bg"
            android:paddingLeft="10dip" android:paddingRight="10dip"
            android:layout_marginTop="15dip" android:layout_marginBottom="15dip" android:checked="false"
            android:textColor="@drawable/follow_font"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp" android:background="@color/edittext_bg_normal">
    </RelativeLayout>
</LinearLayout>