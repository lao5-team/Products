<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:waterfall="http://schemas.android.com/apk/res/com.pineapple.mobilecraft"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical"
        >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:background="@color/pure_white" android:visibility="gone">
        <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:id="@+id/imageView_account" android:layout_alignParentRight="true" android:src="@drawable/account"
                android:layout_margin="10dip" android:clickable="true"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layout_tab" android:visibility="gone">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="热门"
                android:id="@+id/textView5" android:layout_weight="1" android:paddingTop="10dip"
                android:paddingBottom="10dip" android:gravity="center" android:background="#ffedeff1"
                android:textColor="#ffce413d"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="发现"
                android:id="@+id/textView6" android:layout_weight="1" android:paddingTop="10dip"
                android:paddingBottom="10dip" android:gravity="center" android:textColor="#ff3f4042"
                android:background="#ffedeff1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="120dp" android:id="@+id/layout_page" android:background="@drawable/splash_2"
            android:visibility="gone">
    </LinearLayout>
    <!--<ScrollView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:id="@+id/scrollView5">-->
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/layout_bottom" android:background="@color/edittext_bg_normal"
                android:visibility="visible" android:measureWithLargestChild="false">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_margin="10dip" android:id="@+id/layout_account"
                    android:background="@color/edittext_bg_selected" android:visibility="visible">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="文字说明"
                        android:id="@+id/textView7" android:layout_margin="20dip" android:textColor="@color/btn_white_normal"
                        android:visibility="gone"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:layout_below="@+id/textView7"
                        android:layout_marginTop="5dp" android:layout_alignParentEnd="false"
                        android:layout_marginBottom="5dp">
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="登录"
                            android:id="@+id/button_login" android:layout_alignParentBottom="false"
                            android:layout_alignParentLeft="true" android:layout_alignParentStart="false"
                            android:layout_below="@+id/textView7" android:layout_marginLeft="20dip"
                            android:layout_marginBottom="10dip" android:paddingLeft="40dip" android:paddingRight="40dip"
                            android:background="@color/button_normal_red" android:layout_weight="1" android:layout_marginRight="5dip"
                            android:layout_marginTop="10dip"/>
                    <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="注册"
                            android:id="@+id/button_register" android:layout_alignParentBottom="false"
                            android:layout_alignParentRight="true" android:layout_alignParentEnd="false"
                            android:layout_below="@+id/textView7" android:layout_marginRight="20dip"
                            android:paddingLeft="40dip" android:paddingRight="40dip"
                            android:background="@color/pure_white" android:layout_toRightOf="@+id/button_login"
                            android:layout_weight="1" android:layout_marginLeft="5dip" android:layout_marginTop="10dip"
                            android:layout_marginBottom="10dip" android:textColor="@color/pure_black"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent" android:id="@+id/layout_works">
            </LinearLayout>
        </LinearLayout>
    <!--</ScrollView>-->
</LinearLayout>