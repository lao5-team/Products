<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:id="@+id/layout_back" android:visibility="gone">
        </RelativeLayout>
        <!--<include android:layout_width="match_parent"-->
                <!--android:layout_height="68dip"-->
                <!--layout="@layout/actionbar_user" android:id="@+id/layout_user"/>-->
    </RelativeLayout>
    <view android:layout_width="match_parent"
          android:layout_height="wrap_content"
          class="com.viewpagerindicator.TabPageIndicator" android:id="@+id/view_tab"/>
    <view android:layout_width="match_parent"
          android:layout_height="0dp"
          class="android.support.v4.view.ViewPager" android:id="@+id/view_viewPager" android:layout_weight="1"
        />
</LinearLayout>