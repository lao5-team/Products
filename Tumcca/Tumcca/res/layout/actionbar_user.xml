<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="68dip" android:background="@android:color/background_light">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/layout_back" android:layout_centerVertical="true"
            android:clickable="true" android:paddingLeft="10dip" android:paddingRight="10dip" android:visibility="gone">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2" android:src="@drawable/ic_ab_back_holo_light_am"
                android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/layout_profile"
            android:layout_centerVertical="true" android:layout_marginLeft="0dip"
            android:layout_toRightOf="@+id/layout_back">
        <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:id="@+id/imageView_avatar" android:layout_gravity="left"
                android:layout_marginBottom="5dip" android:layout_marginTop="5dip" android:layout_marginRight="10dip"
                android:layout_centerVertical="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甲乙丙丁户籍更新"
                android:id="@+id/textView_user" android:maxLength="5" android:textSize="@dimen/text_size_normal"
                android:layout_toRightOf="@+id/imageView_avatar" android:layout_centerVertical="true"
                />
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注" android:layout_alignParentRight="true"
            android:id="@+id/textView_follow" android:layout_gravity="right"
            android:clickable="true"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"
            android:textColor="@color/button_normal_red" android:background="@drawable/follow_normal"
            android:paddingLeft="10dip" android:paddingRight="10dip" android:layout_centerVertical="true"
            android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
            android:width="100dp" android:gravity="center"
            android:singleLine="true" android:paddingTop="5dip" android:paddingBottom="5dip"/>
</RelativeLayout>