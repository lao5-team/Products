<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@android:color/background_light">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/layout_profile" android:layout_centerVertical="true">
        <ImageView
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:id="@+id/imageView_avatar" android:layout_gravity="left" android:layout_marginLeft="10dip"
                android:layout_marginBottom="5dp" android:layout_marginTop="5dip" android:layout_marginRight="5dip"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="甲乙丙丁户籍更新"
                android:id="@+id/textView_user" android:maxLength="5" android:textSize="@dimen/text_size_normal"
                android:layout_toRightOf="@+id/imageView_avatar" android:layout_centerVertical="true"
                />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/layout_profile"
            android:id="@+id/layout_login" android:background="@android:color/background_light"
            android:layout_centerVertical="true">
        <ImageButton
                android:layout_width="27dip"
                android:layout_height="27dip" android:layout_alignParentTop="false"
                android:layout_centerVertical="true" android:id="@+id/button_login" android:src="@drawable/sign_in"
                android:scaleType="centerCrop" android:adjustViewBounds="true"
                android:background="#00000000" android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip" android:layout_marginLeft="10dp">
        </ImageButton>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册"
                android:id="@+id/textView_login" android:layout_alignTop="@+id/button_login"
                android:layout_toRightOf="@+id/button_login" android:layout_toEndOf="@+id/button_login"
                android:layout_centerVertical="true" android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>