<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ViewFlipper
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/viewFlipper" android:layout_weight="6">
    </ViewFlipper>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="2">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:id="@+id/layout_rotate">
            <ImageView
                    android:layout_width="32dip"
                    android:layout_height="32dip"
                    android:id="@+id/imageView_rotate" android:layout_margin="5dip"
                    android:layout_centerHorizontal="true" android:src="@drawable/rotate"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rotate"
                    android:id="@+id/textView_rotate" android:layout_below="@+id/imageView_rotate"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="1">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok"
                android:id="@+id/button_OK" android:layout_centerVertical="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" android:layout_margin="5dip"
                android:textSize="@dimen/text_size_normal" style="@style/my_button_style"/>
    </RelativeLayout>
</LinearLayout>