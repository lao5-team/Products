<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@color/edittext_bg_normal"
                android:padding="5dip">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:background="@drawable/corner_border_dialog"
            >
        <LinearLayout
                android:layout_width="fill_parent" android:orientation="vertical"
                android:layout_height="match_parent" android:layout_margin="10dip"
                android:id="@+id/layout_image"
                android:layout_above="@+id/layout_control">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="New Text"
                    android:id="@+id/textView_album_title" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" android:textSize="@dimen/text_size_normal"
                    android:layout_weight="0.7"
                    android:layout_marginBottom="5dip"
                    android:gravity="center_vertical"/>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView_0" android:layout_below="@+id/textView_album_title"
                    android:layout_centerHorizontal="true" android:background="@drawable/corner_border_imageview"
                    android:layout_weight="3" android:scaleType="centerCrop"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dip" android:layout_below="@+id/imageView_0"
                     android:layout_weight="1"
                    android:layout_marginTop="5dip" android:layout_marginBottom="5dip">
                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/imageView_1" android:layout_below="@+id/imageView_0"
                        android:layout_alignLeft="@+id/imageView_0" android:layout_weight="1"
                        android:background="@drawable/corner_border_imageview" android:scaleType="centerCrop"
                        />
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:id="@+id/imageView_2"
                           android:layout_below="@+id/imageView_0"
                           android:layout_centerHorizontal="true" android:layout_weight="1" android:layout_marginLeft="5dip"
                           android:layout_marginRight="5dip" android:background="@drawable/corner_border_imageview"
                           android:scaleType="centerCrop"/>
                <ImageView android:layout_width="0dp" android:layout_height="match_parent" android:id="@+id/imageView_3"
                           android:layout_below="@+id/imageView_0"
                           android:layout_alignRight="@+id/imageView_0" android:layout_weight="1"
                           android:background="@drawable/corner_border_imageview" android:scaleType="centerCrop"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" android:id="@+id/layout_control"
                >
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" android:background="@color/edittext_bg_normal" android:id="@+id/divider_image"
                    android:layout_above="@+id/layout_control"
                    >
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/layout_like" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:clickable="true">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView_like" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="false" android:background="@drawable/like"
                        android:layout_marginLeft="5dip" android:visibility="gone"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="喜欢"
                        android:id="@+id/textView_like"
                        android:layout_toRightOf="@+id/imageView_like" android:layout_toEndOf="@+id/imageView_like"
                        android:layout_centerVertical="true" android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/text_size_normal" android:textColor="@color/button_normal_red"
                        android:layout_marginTop="6dp" android:layout_marginBottom="6dp"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" android:background="@color/edittext_bg_normal">
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/layout_collect" android:layout_width="fill_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:clickable="true">
                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/imageView_collect" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="false" android:background="@drawable/star"
                        android:layout_marginLeft="0dip" android:visibility="gone"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="取消收藏"
                        android:id="@+id/textView_collect"
                        android:layout_toRightOf="@+id/imageView_collect" android:layout_toEndOf="@+id/imageView_collect"
                        android:layout_centerVertical="true" android:gravity="center_vertical|center_horizontal"
                        android:textSize="@dimen/text_size_normal" android:textColor="@color/button_normal_red"
                        android:layout_marginTop="6dp" android:layout_marginBottom="6dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>