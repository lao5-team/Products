<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:layout_width="32dip"
                android:layout_height="32dip"
                android:id="@+id/imageView_avatar" android:layout_alignParentTop="false"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp" android:layout_centerVertical="true"/>
        <TextView
                android:id="@+id/textView_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:text="TextView"
                android:textSize="@dimen/text_size_normal"
                android:layout_centerVertical="true" android:layout_toRightOf="@+id/imageView_avatar"
                android:layout_marginTop="10dip" android:layout_marginRight="10dip"
                android:layout_marginBottom="10dip"/>

    </RelativeLayout>

</LinearLayout>
